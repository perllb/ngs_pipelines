// Configuration file for 10x scATACseq analysis pipeline 

params {

       /* =====================
       * User defined params:
       *  =====================
       */

	// Folder of experiment raw data
	experiment = "/fs1/seqdata/NovaSeq/200324_A00681_0094_BHJC3LDRXX/"

	// Sample Sheet (Must be in directory defined above!)
	sheetType = "normal"
	ssheet = "sample_sheet.custom.csv"

	// Directory to store fastq data etc.
	// If not store in same dir where you run the pipeline, give entire path.

 	outDir = "${experiment}/outdir/"


	// Project ID (Can be any)
	metaid = "200324_nova"

	// Lanes (Set false if all lanes should be included!)
	lanes = "1,2"

	// Automatic assignment
	sheet = "$experiment/$ssheet"
	fqDir = "${outDir}fastq_raw/"
	countDir = "${outDir}cr_count/"
	qcDir = "${outDir}QCdir/"
}

// Define SLURM specs
process {
	executor='slurm'
	queue='normal'
	container = '/fs1/per/containers_singularity/cellranger-rna/cellranger-rna_3.1.0_pipe.sif'
	time='5h'
	cpus='8'

	withName:mkfastq {
		time='24h'
		cpus='8'
		memory='64 GB'
	}
	withName:count {
		executor='slurm'
		queue='normal'
		time='2d'
		cpus='8'
		memory='64 GB'
	}
}


singularity {
	    enabled = true
	    runOptions = '--bind /fs1/ --bind /local/'	    
}
